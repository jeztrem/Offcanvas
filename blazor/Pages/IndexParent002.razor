@page "/parentchild002"
@using blazor.Components 

<h1>Parent-child example</h1>

<Child002 Title="Panel Title from Parent" OnShiftCallback="ShiftMessage">
    Content of the child component is supplied by the parent component.
</Child002>

<p>@message</p>


<p>@folderKey</p>

@code {
    private string? message;

    private string folderKey = "Value from Parent";   
    private void ShiftMessage(MouseEventArgs e)
    {
        message = $"Called shiftMessage!";
    }
}